@page
@model Raffel_Web.Pages.ProjectView.ProjectCard.Netsuite.CreateModel
@using Microsoft.AspNetCore.Identity
@using Raffel_Web.Areas.Identity.Data
@inject SignInManager<Raffel_WebUser> SignInManager
@inject UserManager<Raffel_WebUser> UserManager
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>NetsuiteEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.LEAD_NUMBER" class="control-label"></label>
                <input asp-for="NetsuiteEntry.LEAD_NUMBER" type="text" value=@Model.LEAD readonly />
                <span asp-validation-for="NetsuiteEntry.LEAD_NUMBER" class="text-danger"></span>
            </div>
            <div>
                <p>
                    <label asp-for="@Model.PN" class="control-label"></label>
                    <input asp-for="@Model.PN" type="text" value=@Model.PN readonly />
                </p>
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.PART_SUB" class="control-label"></label>
                <input asp-for="NetsuiteEntry.PART_SUB" class="form-control" />
                <span asp-validation-for="NetsuiteEntry.PART_SUB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.MANUFACTURER" class="control-label"></label>
                <select asp-for="NetsuiteEntry.MANUFACTURER" asp-items="Model.Manufac"></select>
                <span asp-validation-for="NetsuiteEntry.MANUFACTURER" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.MFG_COST" class="control-label"></label>
                <input asp-for="NetsuiteEntry.MFG_COST" class="form-control" />
                <span asp-validation-for="NetsuiteEntry.MFG_COST" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.LAST_UPDATE" class="control-label"></label>
                <input asp-for="NetsuiteEntry.LAST_UPDATE" type="text" value="@DateTime.Now" readonly />
                <span asp-validation-for="NetsuiteEntry.LAST_UPDATE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.SALES_DES" class="control-label"></label>
                <textarea asp-for="NetsuiteEntry.SALES_DES" rows="10" cols="80" class="form-control"></textarea>
                <span asp-validation-for="NetsuiteEntry.SALES_DES" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.PURCHASE_INFO" class="control-label"></label>
                <textarea asp-for="NetsuiteEntry.PURCHASE_INFO" rows="10" cols="80" class="form-control"></textarea>
                <span asp-validation-for="NetsuiteEntry.PURCHASE_INFO" class="text-danger"></span>
            </div>
            <div class="form-group" enctype="multipart/form-data">
                <dl>
                    <dt>
                        <label asp-for="FileUpload.FormFile"></label>
                        Maximum size is 2 Mb
                    </dt>
                    <dd>
                        <input asp-for="FileUpload.FormFile" type="file">
                        <span asp-validation-for="FileUpload.FormFile"></span>
                    </dd>
                </dl>
                @* <input asp-page-handler="Upload" class="btn" type="submit" />*@
            </div>
            <div class="form-group">
                <label asp-for="NetsuiteEntry.SUB_BY" class="control-label"></label>
                <input asp-for="NetsuiteEntry.SUB_BY" class="form-control" value=@UserManager.GetUserName(User) readonly />
                <span asp-validation-for="NetsuiteEntry.SUB_BY" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
</form>

    </div>
</div>

<div>
    <a asp-page="Index" asp-route-LEAD_NUMBER="@Model.LEAD">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
